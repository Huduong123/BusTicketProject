doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Đăng ký Garena
    link(rel="stylesheet", href="/css/dangnhap.css") 
  body
    header
      .logo
        a(href="/") 
          img(src="/images/logo.png", alt="Logo")
    .container
      .login-box
        h2 Đăng ký
        form(action="#" method="POST")
          .input-group
            label(for="username") Tên đăng nhập
            input#username(type="text" name="username" placeholder="Nhập tên đăng nhập")
          .input-group
            label(for="email") Email
            input#email(type="email" name="email" placeholder="Nhập email")
          .input-group
            label(for="password") Mật khẩu
            input#password(type="password" name="password" placeholder="Nhập mật khẩu")
          .input-group
            label(for="confirm-password") Xác nhận mật khẩu
            input#confirm-password(type="password" name="confirm-password" placeholder="Nhập lại mật khẩu")
          button(type="submit").login-btn Đăng Ký Ngay
          .register
            a(href="/login")
              button(type="button").register-btn Đã có tài khoản? Đăng nhập
        .footer
          a(href="#") Điều Khoản Dịch Vụ 
          |  và  
          a(href="#") Chính Sách Bảo Mật
    include footer.pug