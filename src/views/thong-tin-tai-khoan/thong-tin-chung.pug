extends ../layouts/layout

block content
  .container.mt-5.mb-5
    .row
      // Sidebar bên trái
      .col-md-3
        .list-group
          a.list-group-item.list-group-item-action.active(href="/thong-tin-tai-khoan/thong-tin-chung") 
            i.fas.fa-user-circle.me-2 
            | Thông tin tài khoản
          a.list-group-item.list-group-item-action(href="/thong-tin-tai-khoan/lich-su-mua-ve") 
            i.fas.fa-clock.me-2 
            | Lịch sử mua vé
          a.list-group-item.list-group-item-action(href="/thong-tin-tai-khoan/TAPay") 
            i.fas.fa-map-marker-alt.me-2 
            | TAPay
          a.list-group-item.list-group-item-action(href="/thong-tin-tai-khoan/resetpassword") 
            i.fas.fa-key.me-2 
            | Đặt lại mật khẩu
          a.list-group-item.list-group-item-action.text-danger(href="/logout") 
            i.fas.fa-sign-out-alt.me-2 
            | Đăng xuất

      // Nội dung bên phải
      .col-md-9
        h4.mb-4 Thông tin tài khoản
        p.text-muted Quản lý thông tin hồ sơ để bảo mật tài khoản

        .card.shadow-sm.p-4
          .row
            .col-md-4.text-center
              img.rounded-circle(src="/images/user.png" alt="avatar" width="180" height="180")
              br
              button.btn.btn-outline-secondary.mt-3 Chọn ảnh
              small.d-block.text-muted.mt-2 Dung lượng file tối đa 1 MB. Định dạng: .JPEG, .PNG
            .col-md-8
              form
                .mb-3.row
                  label.col-sm-4.col-form-label Họ và tên
                  .col-sm-8
                    input.form-control(type="text", value="Nguyễn Tự Ánh")
                .mb-3.row
                  label.col-sm-4.col-form-label Số điện thoại
                  .col-sm-8
                    input.form-control(type="text", value="0763554775")
                .mb-3.row
                  label.col-sm-4.col-form-label Giới tính
                  .col-sm-8
                    select.form-select
                      option(value="Nam", selected) Nam
                      option(value="Nữ") Nữ
                      option(value="Khác") Khác
                .mb-3.row
                  label.col-sm-4.col-form-label Email
                  .col-sm-8
                    input.form-control(type="email", value="nguyentuanh097888@gmail.com")
                .mb-3.row
                  label.col-sm-4.col-form-label Ngày sinh
                  .col-sm-8
                    input.form-control(type="date", value="2025-03-06")
                .mb-3.row
                  label.col-sm-4.col-form-label Địa chỉ
                  .col-sm-8
                    input.form-control(type="text")
                .mb-3.row
                  label.col-sm-4.col-form-label Nghề nghiệp
                  .col-sm-8
                    input.form-control(type="text")
                .text-center.mt-4
                  button.btn.btn-warning.px-4(type="submit") Cập nhật
