extends layouts/layout

block head
  link(rel="stylesheet" href="/css/thanhtoan1.css")
  script(src="/js/thanhtoan.js")

block content
  .container
    .header-thanhtoan
      h1#trip-name Chuyến đi đang tải...
      p#trip_date Đang tải...

    .block-timer
      p.countdown-time.text-danger.fs-5.text-center.mt-3
        i.fas.fa-clock.me-2
        | Thời gian còn lại để thanh toán: 
        span#countdown 20:00

    .content-wrapper
      // Chỉ hiển thị thông tin chuyến đi bên phải
      .right-column
        .info-container
          .customer-info
            h3 Thông tin hành khách
            p#customer-name Họ và tên: Đang tải...
            p#customer-phone Số điện thoại: Đang tải...
            p#customer-email Email: Đang tải...
          .trip-info
            h3 Thông tin chuyến xe
            p#route-info Tuyến xe: Đang tải...
            p#departure-time Thời gian xuất bến: Đang tải...
            p#seat-count Số lượng ghế: Đang tải...
            p#seat-info Ghế đã chọn: Đang tải...
            p#pickup-location Điểm lên xe: Đang tải...
            p#dropoff-location Điểm trả khách: Đang tải...
          .price-details
            h3 Chi tiết giá
            p#ticket-price Giá vé: Đang tải...
            p Phí thanh toán: 0đ
            p#total-price-ticket Tổng tiền: Đang tải...

    // Khu vực chứa nút thanh toán
    .payment-actions.mt-4.text-center
      button#pay-now(type="button") Thanh toán
