
extends ../../layouts/layoutAdmin

block content
  .container.mt-4
    h2.text-center.mb-4 Thêm tài khoản Admin mới

    form(action="/admins" method="POST")
      .mb-3
        label.form-label(for="username") Tên đăng nhập
        input.form-control(type="text" name="username" required)

      .mb-3
        label.form-label(for="password") Mật khẩu
        input.form-control(type="password" name="password" required)

      .mb-3
        label.form-label(for="full_name") Họ tên
        input.form-control(type="text" name="full_name" required)

      .mb-3
        label.form-label(for="email") Email
        input.form-control(type="email" name="email" required)

      .mb-3
        label.form-label(for="phone") Số điện thoại
        input.form-control(type="text" name="phone" required)

      button.btn.btn-primary(type="submit") Thêm Admin
      a.btn.btn-secondary.ms-2(href="/admins/admin") Quay lại
